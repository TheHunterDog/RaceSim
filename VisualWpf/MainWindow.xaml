<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:DataContext/>
    </Window.DataContext>
    <Grid Background="#FF407635">
        <DockPanel>
            <Label Content="{Binding TrackName, BindsDirectlyToSource=False, IsAsync=False, NotifyOnSourceUpdated=False, NotifyOnTargetUpdated=False, NotifyOnValidationError=False, ValidatesOnDataErrors=False, ValidatesOnExceptions=False, ValidatesOnNotifyDataErrors=True}"/>
            <Menu DockPanel.Dock="Top" VerticalAlignment="Top" Height="20">
                <MenuItem Header="Menu">
                    <MenuItem Header="OpenWindow" Click="Open_WINdow"/>
                    <MenuItem Header="Open Other window" Click="open_OtherWindow"/>
                    <MenuItem Header="Close" Click="MenuItem_Exit_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Image Name="TrackImage"/>
    </Grid>
</Window>
